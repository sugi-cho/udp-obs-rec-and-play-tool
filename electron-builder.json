{
  "appId": "com.sugicho.udpobsrecandplaytool",
  "productName": "UDP-OBS-Rec-and-Play-Tool",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "default-media",
      "to": "default-media",
      "filter": [
        "**/*"
      ]
    }
  ],
  "asar": true,
  "npmRebuild": false,
  "win": {
    "target": [
      "nsis",
      "zip"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "category": "public.app-category.video"
  }
}
